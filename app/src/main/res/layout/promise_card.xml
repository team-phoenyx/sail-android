<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/promiseCards"
    android:backgroundTint="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/promiseTextGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/promiseTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentLayout">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personDateLayout">

                <TextView
                    android:id="@+id/promisePersonTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:text="Name"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goalDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:foregroundGravity="right"
                    android:gravity="end"
                    android:paddingBottom="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:text="Mar. 20 2017"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/promiseDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="90"
                android:maxLines="3"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:text="Placeholding Text"
                android:textColor="@color/colorText"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/promiseButtonsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/promiseDoneButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:contentDescription="Done"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/check" />

            <ImageButton
                android:id="@+id/promiseStarButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:contentDescription="Star"
                android:background="@android:color/transparent"
                android:src="@drawable/star_outline" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>