<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/timelineCards"
    android:backgroundTint="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/timelineTextGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/timelineTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timelineDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:text="Mar. 20 2017"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/timelineDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="90"
            android:maxLines="3"
            android:paddingBottom="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:text="Placeholding Text"
            android:textColor="@color/colorText" />

    </LinearLayout>

</android.support.v7.widget.CardView>